<style>
.add-button {
  width: 30.5vw;
  height: 6vw;
  background-color: #5fb523;
  display: flex;
  justify-content: center;
  align-items: center;
  font-family: 'Proxima Nova Light', sans serif;
  border-radius: 10px 0 0 10px;
}

.new {
  width: 16vw;
  height: 1.5vw;
  background-color: #5fb523;
  text-decoration: none;
  text-align: center;
  font-size: 1.5vw;
  color: #f0f0f0;
  border: 1px #f0f0f0 solid;
  border-radius: 5px;
  display: flex;
  justify-content: center;
  align-items: center;
  padding: 1vw;
  font-family: 'Proxima Nova Light';
}


.home-button {
  margin-top: 2.2vw;
}

.homebutton {
  border: 0;
  border-radius: 0 10px 10px 0;
  background-color: #3778c2;
  text-decoration: none;
  text-align: center;
  font-size: 1.5vw;
  padding-left: 13.3vw;
  padding-right: 13.3vw;
  padding-top: 2.2vw;
  padding-bottom: 2.2vw;
  color: #f0f0f0;
  font-family: 'Proxima Nova Light', sans serif;
}

.user-page {
  display: flex;
  flex-direction: column;
  justify-content: center;
  margin-bottom: 50px;
}

h2 {
  margin-top: 20px;
  height: 40px;
  text-align: center;
  color: rgb(152, 157, 163);
  font-family: 'Proxima Nova Bold', sans-serif;
  font-size: 50px;
}

.users-list {
  list-style: none;
  padding: 0;
}

.user-info {
  display: flex;
  flex-direction: row;
  align-content: space-evenly;
  margin: 2vw;
  margin-left: 20vw;
}

.image {
  width: 6vw;
  height: 6vw;
  border: 0;
  box-shadow: 0 4px 8px rgb(0 0 0 / 20);
  border-radius: 5px;
  margin-top: 1vw;
  margin-left: 1vw;
  background-color: black;
}

.name {
  width: 60vw;
  height: 8vw;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  border: 3px #f0f0f0 solid;
  box-shadow: 0 4px 8px rgb(0 0 0 / 20);
  border-radius: 5px;
  margin-top: 15px;
  margin-left: 15px;
  background-color: white;
}

img {
  width: 6vw;
  height: 6vw;
}

.content {
  width: 30vw;
  height: 6vw;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  align-items: flex-start;
  margin-top: 1.5vw;
}

.username {
  width: 20vw;
  height: 3vw;
  font-size: 2vw;
  margin: 0;
  display: flex;
  align-items: center;
  justify-content: left;
  font-family: 'Proxima Nova Bold', 'sans-serif';
  font-weight: bold;
  color: rgb(152, 157, 163);
}

.time {
  font-family: 'Proxima Nova Light', sans-serif;
  color: rgb(152, 157, 163);
  font-size: 1vw;
}

.posts-counter {
  width: 10vw;
  height: 5vw;
  margin: 0;
  font-size: 1.5vw;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-top: 0.5vw;
  font-family: 'Proxima Nova Bold', sans-serif;
  font-weight: bold;
  color: #434b54;
}

.buttons-section {
  display: flex;
  justify-content: center;
  margin-left: 2vw;
}

.all {
  color: #434b54;
  font-weight: bold;
  margin-top: 1vw;
  align-items: center;
}

.low {
  margin-top: 1.6vw;
  font-size: 2vw;
}

.top {
  margin-left: 20.7vw;
  margin-top: 0;
}
</style

<div class="user-page">
  <div class="name top">
    <div class="image">
      <%= image_tag(@category.icon, alt: @category.name) %>
        </div>
        <div class="content">
          <h3 class="username all">All <%= @category.name %></h3>
        </div>
        <p class="posts-counter all low"><%= number_to_currency(@category.operations.sum(:amount), unit: "$") %></p>
      </div>
  <ul class="users-list">
  <% @operations.each do |operation| %>
    <li class="user-info">
      <div class="name">
        <div class="image">
         <%= image_tag(@category.icon, alt: @category.name) %>
        </div>
        <div class="content">
          <h3 class="username"><%= operation.name %></h3>
          <h4 class="time"><%= operation.created_at.strftime('%d/%m/%Y') %></h4>
        </div>
        <p class="posts-counter"><%= number_to_currency(operation.amount, unit: "$") %></p>
      </div>
    </li>
  <% end %>    
  </ul>
  <div class="buttons-section">
    <div class="add-button">
      <%= link_to 'add a new transaction', new_category_operation_path, class: 'new' %>
    </div>
    <div class="home-button">  
      <%= link_to 'home', authenticated_root_path, class: 'homebutton' %>
    </div>
  </div>
</div>

